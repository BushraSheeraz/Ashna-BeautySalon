@model BeautySalon.Models.User

@{
    ViewBag.Title = "Delete";
}

<div class="align-items-center border-bottom d-flex justify-content-between pt-3 px-5 py-1">
    <h3>Delete User</h3>

</div>

<div class="align-items-center d-flex justify-content-center p-5">
    <div class="col-12 col-sm-6 px-3">
        <div class="card">
            <div class="card-content px-2 py-3">
                <h3>Are you sure you want to delete this?</h3>

                <div class="card-body">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.user_name)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.user_name)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.user_email)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.user_email)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.user_contact)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.user_contact)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.user_password)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.user_password)
                        </dd>

                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color d-flex justify-content-center pb-3">
                            <input type="submit" value="Delete" class="btn btn-outline-white py-2 px-4" />
                            <button class="btn btn-outline-white py-2 px-4">
                                @Html.ActionLink("Back to List", "Index")
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
