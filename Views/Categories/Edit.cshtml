@model BeautySalon.Models.Category

@{
    ViewBag.Title = "Edit";
}

<div class="align-items-center border-bottom d-flex justify-content-between pt-3 px-5 py-1">
    <h3>Edit Category</h3>
    <button class="btn btn-outline-white py-2 px-4">
        @Html.ActionLink("Back to List", "Index")
    </button>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="col-md-6 appointment pl-md-5 container py-5 vh-100">
        <div class="container py-5 h-100">
            <h4>Category</h4>
            <hr />
            <form class="appointment-form">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    @Html.LabelFor(model => model.category1, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.category1, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.category1, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-primary btn-outline-white py-3 px-4" />
                    </div>
                </div>
            </form>
        </div>
    </div>
}


