@model IEnumerable<BeautySalon.Models.Appointment>

@{
    ViewBag.Title = "Index";
}

<div class="align-items-center border-bottom d-flex justify-content-between pt-3 px-5 py-1">
    <h3> Appoinments</h3>
    
</div>


<div class="container table-responsive py-5">
    <table class="table table-bordered table-hover">
        <thead class="table-head" style="background-color: #fa5bdd; color: white">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Ap_Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Service.ServiceName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User.user_name)
                </th>
                <th>Actions</th>
            </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ap_Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Service.ServiceName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.user_name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Ap_Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Ap_Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Ap_Id })
                    </td>
                </tr>
            }

    </table>

</div>
